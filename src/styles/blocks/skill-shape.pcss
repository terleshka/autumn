.skills-row__title{
  font-size: 24px;
  color: #fff;
  font-weight: bold;
  margin-bottom: 35px;
}


.skill__shape {
  width: 200px;
  height: 200px;
  display: block;
  //transform: rotate(-90deg);
}

.skill__circle {
  fill: transparent;
  stroke: gray;
  stroke-width: 3px;
}

.skill__circle--position--above{
  stroke: orange;
  stroke-width: 10px;
  stroke-dasharray: 250;
  stroke-dashoffset: 250;
  
}
.skill__title{
  font-size: 18px;
  font-weight: bold;
  fill: #fff;
  opacity: 0.5;

}